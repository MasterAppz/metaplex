# Stage 1: Compile and Build the app

# Node veersion
FROM node:14.17.3-alpine as build

WORKDIR /app

COPY package.json /app

RUN yarn policies set-version 1.19.0 install

COPY . /app

CMD ["yarn", "run", "start"]

